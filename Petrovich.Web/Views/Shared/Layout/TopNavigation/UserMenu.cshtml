<a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    <img src="~/Content/img/profile.png" alt="...">@User.Identity.GetUserName()
    <span class=" fa fa-angle-down"></span>
</a>

<ul class="dropdown-menu dropdown-usermenu pull-right">
    <li>
        <a href="@Url.Action(PetrovichRoutes.Account.ChangePassword)">
            <i class="fa fa-gear pull-right"></i> Сменить пароль
        </a>
    </li>
    <li>
        <div style="display: none">
            @using (Html.BeginForm(PetrovichRoutes.Account.Logout, FormMethod.Post, new { name = "logoutForm" }))
            {
                @Html.AntiForgeryToken();
            }
        </div>
        <a href="javascript:window.logout();">
            <i class="fa fa-sign-out pull-right"></i> Выход
        </a>
    </li>
</ul>