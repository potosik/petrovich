@model Petrovich.Web.Models.Client.ClientCreateViewModel

@{
    ViewBag.Title = "Регистрация клиента";
}

<div class="x_panel">
    <div class="x_title">
        <h2>@ViewBag.Title <small>регистрация нового клиента в системе</small></h2>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <br>
        @using (Html.BeginForm(PetrovichRoutes.Clients.Create, new { pickReturnUrl = Request.QueryString.Get("pickReturnUrl"), parameter = Request.QueryString.Get("parameter") }, FormMethod.Post, new { @class = "form-horizontal form-label-left", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <span class="required">*</span>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control col-md-7 col-xs-12", placeholder = "Фамилия" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <span class="required">*</span>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control col-md-7 col-xs-12", placeholder = "Имя" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Address, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <span class="required">*</span>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control col-md-7 col-xs-12", placeholder = "Адрес проживания" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Registered, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.TextBoxFor(m => m.Registered, new { @class = "form-control col-xs-12", placeholder = "Адрес регистрации" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PassportId, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <span class="required">*</span>
                <div class="col-md-2 col-sm-2 col-xs-12">
                    @Html.TextBoxFor(m => m.PassportId, new { @class = "form-control col-xs-12", placeholder = "№ паспорта" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PassportData, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.TextBoxFor(m => m.PassportData, new { @class = "form-control col-xs-12", placeholder = "Паспорт выдан (кем, когда)" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PersonalId, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <span class="required">*</span>
                <div class="col-md-2 col-sm-2 col-xs-12">
                    @Html.TextBoxFor(m => m.PersonalId, new { @class = "form-control col-xs-12", placeholder = "Идентификационный №" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.BirthDate, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <span class="required">*</span>
                <div class="col-md-2 col-sm-2 col-xs-12">
                    @Html.TextBoxFor(model => model.BirthDate, "{0:o}", htmlAttributes: new { id = "birthdate", @type = "hidden" })
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </span>
                        <input id="birthdatePicker" type="text" class="form-control col-md-7 col-xs-12" placeholder="Дата рождения" autocomplete="off">
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PhonesJson, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <div class="col-md-2 col-sm-2 col-xs-12">
                    @Html.HiddenFor(m => m.PhonesJson, new { id = "phonesJson", @class = "json-array-edit" })
                </div>
            </div>
            <div class="ln_solid"></div>
            <div class="form-group">
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                    <button type="submit" class="btn btn-success">Зарегистрировать</button>
                    @Html.ActionLink("Отмена", PetrovichRoutes.Clients.Index, null, new { @class = "btn btn-default" })
                </div>
            </div>
        }
    </div>
</div>

<style type="text/css">
    button.ui-datepicker-current {
        display: none;
    }
</style>