@model IEnumerable<Petrovich.Web.Models.Logging.LogViewModel>

@{
    ViewBag.Title = "Просмотр логов";
}

<div class="x_panel">
    <div class="x_title">
        <h2>@ViewBag.Title <small>лог-записи работы системы</small></h2>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Уровень</th>
                    <th>Сообщение</th>
                    <th>Дата создания</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action(PetrovichRoutes.Logging.Details, new { id = item.LogId })" aria-label="Редактировать" title="Редактировать">
                                @item.Severity
                            </a>
                        </td>
                        <td>@item.Message</td>
                        <td>@item.Created</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
