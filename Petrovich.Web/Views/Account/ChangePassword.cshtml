@model Petrovich.Web.Models.Account.ChangePasswordViewModel

@{
    ViewBag.Title = "Смена пароля";
}

<div class="x_panel">
    <div class="x_title">
        <h2>@ViewBag.Title</h2>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <br>
        @using (Html.BeginForm(PetrovichRoutes.Account.ChangePassword, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.OldPassword, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <span class="required">*</span>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control col-md-7 col-xs-12", placeholder = "Старый пароль" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <span class="required">*</span>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control col-md-7 col-xs-12", placeholder = "Новый пароль" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                <span class="required">*</span>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-md-7 col-xs-12", placeholder = "Подтвердите пароль" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-10">
                    <input type="submit" value="Сменить пароль" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>



